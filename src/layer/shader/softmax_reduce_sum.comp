{
    int gx = int(gl_GlobalInvocationID.x);
    int gy = int(gl_GlobalInvocationID.y);
    int gz = int(gl_GlobalInvocationID.z);

    if (gx >= p.w || gy >= p.h || gz >= p.c)
        return;

    if (p.dims == 1) // axis == 0
    {
        float sum_value = 0.f;
        for (int i=0; i<p.w; i++)
        {
            sum_value += bottom_top_blob_data[i];
        }
        sum_workspace_data[0] = sum_value;

        return;
    }

