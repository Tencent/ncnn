    {
        float sum_value = 0;
        for (int z = 0; z < p.c; z++)
        {
            int v_offset = z * p.cstep + gy * p.w + gx;
            sum_value += bottom_top_blob_data[v_offset];
        }
        sum_workspace_data[ gy * p.w + gx ] = sum_value;

        return;
    }

