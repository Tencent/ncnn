    }

#if NCNN_image_shader
    ivec4 i4 = z4 * psc(w) * psc(h) * psc(d) + y4 * psc(w) + x4;
    ivec4 ii4 = zz4 * psc(w) * psc(h) * psc(d) + yy4 * psc(w) + xx4;
    ivec4 lane2;
    ivec4 lane2_1;
    ivec4 lane4;
    ivec4 lane4_1;
#else
    ivec4 i4 = z4 * psc(cstep) + y4 * psc(w) + x4;
    ivec4 ii4 = zz4 * psc(cstep) + yy4 * psc(w) + xx4;
    ivec4 v_offset;
    ivec4 vv_offset;
#if NCNN_fp16_packed
    ivec4 lane2;
    ivec4 lane4;
